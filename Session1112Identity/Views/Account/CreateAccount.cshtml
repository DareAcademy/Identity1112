@model SignUp
@{
    Layout = "~/Views/Shared/_menu.cshtml";
}


    <form method="post">
        <div class="alert alert-primary" role="alert">
            @ViewData["result"]
        </div>

    <div class="mb-3 ms-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for=Name placeholder="name">
    </div>
    <div class="mb-3 ms-3">
        <label class="form-label">Gender</label>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for=Gender value="male">
        <label class="form-check-label" for="inlineRadio1">Male</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" asp-for=Gender value="female">
        <label class="form-check-label" for="inlineRadio2">Female</label>
    </div>
    </div>
    <div class="mb-3 ms-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for=Email placeholder="email@email.com">
    </div>
    <div class="mb-3 ms-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for=Password placeholder="password">
    </div>
    <div class="mb-3 ms-3">
        <label class="form-label">Confirm Password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
    </div>
    <div class="mb-3 ms-3">
        <input type="submit" value="Create Account" class="btn btn-primary" asp-action="SignUP" />
    </div>
    </form>
